<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hirabg">

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="v"
        android:id="@+id/btnV"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:enabled="false" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="g"
        android:id="@+id/btnG"
        android:layout_above="@+id/btnV"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp" />

    <Button
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:id="@+id/btnSubmit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/btnV" />

    <Button
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:text="Delete"
        android:id="@+id/btnDelete"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/btnV" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="b"
        android:id="@+id/btnB"
        android:layout_alignBottom="@+id/btnV"
        android:layout_alignParentStart="false"
        android:layout_toEndOf="@+id/btnV" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="n"
        android:id="@+id/btnN"
        android:layout_alignBottom="@+id/btnB"
        android:layout_toEndOf="@+id/btnB" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="m"
        android:id="@+id/btnM"
        android:layout_alignBottom="@+id/btnN"
        android:layout_toEndOf="@+id/btnN" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="c"
        android:id="@+id/btnC"
        android:layout_alignBottom="@+id/btnV"
        android:layout_toStartOf="@+id/btnV" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="x"
        android:id="@+id/btnX"
        android:layout_alignBottom="@+id/btnC"
        android:layout_toStartOf="@+id/btnC"
        android:enabled="false" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="z"
        android:id="@+id/btnZ"
        android:layout_alignBottom="@+id/btnX"
        android:layout_toStartOf="@+id/btnX" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="h"
        android:id="@+id/btnH"
        android:layout_alignBottom="@+id/btnG"
        android:layout_toEndOf="@+id/btnG" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="j"
        android:id="@+id/btnJ"
        android:layout_alignBottom="@+id/btnH"
        android:layout_toEndOf="@+id/btnH" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="k"
        android:id="@+id/btnK"
        android:layout_toEndOf="@+id/btnJ"
        android:layout_alignBottom="@+id/btnJ" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="l"
        android:id="@+id/btnL"
        android:layout_alignBottom="@+id/btnK"
        android:layout_toEndOf="@+id/btnK"
        android:enabled="false" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="f"
        android:id="@+id/btnF"
        android:layout_alignBottom="@+id/btnG"
        android:layout_toStartOf="@+id/btnG" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="d"
        android:id="@+id/btnD"
        android:layout_alignBottom="@+id/btnF"
        android:layout_toStartOf="@+id/btnF" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="s"
        android:id="@+id/btnS"
        android:layout_alignBottom="@+id/btnD"
        android:layout_toStartOf="@+id/btnD" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="a"
        android:id="@+id/btnA"
        android:layout_alignBottom="@+id/btnS"
        android:layout_toStartOf="@+id/btnS" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="p"
        android:id="@+id/btnP"
        android:layout_above="@+id/btnG"
        android:layout_alignRight="@+id/btnSubmit" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="o"
        android:id="@+id/btnO"
        android:layout_toStartOf="@+id/btnP"
        android:layout_alignBottom="@+id/btnP" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="i"
        android:id="@+id/btnI"
        android:layout_toStartOf="@+id/btnO"
        android:layout_alignBottom="@+id/btnO" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="u"
        android:id="@+id/btnU"
        android:layout_toStartOf="@+id/btnI"
        android:layout_alignBottom="@+id/btnI" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="y"
        android:id="@+id/btnY"
        android:layout_toStartOf="@+id/btnU"
        android:layout_alignBottom="@+id/btnU" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="q"
        android:id="@+id/btnQ"
        android:layout_above="@+id/btnG"
        android:layout_alignStart="@+id/btnDelete" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="w"
        android:id="@+id/btnW"
        android:layout_toEndOf="@+id/btnQ"
        android:layout_alignBottom="@+id/btnQ" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="e"
        android:id="@+id/btnE"
        android:layout_toEndOf="@+id/btnW"
        android:layout_alignBottom="@+id/btnW" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="r"
        android:id="@+id/btnR"
        android:layout_toEndOf="@+id/btnE"
        android:layout_alignBottom="@+id/btnE" />

    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:text="t"
        android:id="@+id/btnT"
        android:layout_toEndOf="@+id/btnR"
        android:layout_alignParentEnd="false"
        android:layout_alignBottom="@+id/btnR" />

</RelativeLayout>